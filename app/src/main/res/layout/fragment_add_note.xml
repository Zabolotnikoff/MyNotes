<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.AddNoteFragment">

    <TextView
        android:id="@+id/createNoteTextView"
        style="@style/text_view_header"
        android:text="@string/creating_note_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/headerNoteEditText"
        style="@style/edit_text_note_header"
        android:autofillHints=""
        android:hint="@string/hint_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createNoteTextView"
        tools:ignore="LabelFor"
        tools:text="Заголовок заметки" />

    <EditText
        android:id="@+id/textNoteEditText"
        style="@style/edit_text_note_normal"
        android:autofillHints=""
        android:hint="@string/hint_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerNoteEditText"
        tools:ignore="LabelFor"
        tools:text="Текст заметки" />

    <Button
        android:id="@+id/createNoteButton"
        style="@style/button"
        android:text="@string/btn_create_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNoteEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>

